extends ../template/master.pug

block content
	div(style='float: left;')
		h1.title(style='color: green;') Posts
	div(style='float: right;')
		a(href=`/browse`)
			button.button(type='button')
				strong(style='color: green;') Back to Categories
	div
		br
		br
		hr
		each post in posts
			td: a(href=`/browse/${catid}/${post.id}`)
				strong
					li= `${post.id} - ${post.post_title}`
			br
